<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="codefactory.learfletproject.LoginActivity">

    <ImageView
        android:id="@+id/image_join"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_below="@+id/image_line"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        app:srcCompat="@drawable/admin2" />

    <ImageView
        android:id="@+id/image_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtv_join"
        app:srcCompat="@drawable/line1"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/txtv_join"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="로그인"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/imgbtn_back"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:layout_above="@+id/image_line"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        app:srcCompat="@drawable/back"
        android:layout_alignParentLeft="true" />

    <EditText
        android:id="@+id/edt_id"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/image_join"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:ems="10"
        android:hint="이메일 또는 아이디"
        android:inputType="textPersonName"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edt_pw"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/edt_id"
        android:layout_below="@+id/edt_id"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="비밀번호(4~8자리)"
        android:inputType="textPassword"
        android:singleLine="false"
        android:textSize="16sp"
        android:layout_alignLeft="@+id/edt_id" />

    <ImageButton
        android:id="@+id/imgbtn_login"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignEnd="@+id/edt_pw"
        android:layout_below="@+id/edt_pw"
        android:layout_marginTop="21dp"
        app:srcCompat="@drawable/loginbutton"
        android:layout_alignRight="@+id/edt_pw" />

    <ImageButton
        android:id="@+id/imgbtn_join"
        android:layout_width="205dp"
        android:layout_height="44dp"
        android:layout_alignStart="@+id/edt_pw"
        android:layout_alignTop="@+id/imgbtn_login"
        app:srcCompat="@drawable/joinbutton2"
        android:layout_alignLeft="@+id/edt_pw" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="150dp"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imgbtn_login"
        android:layout_marginTop="30dp"
        android:layout_toStartOf="@+id/image_join"
        app:srcCompat="@drawable/line1"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/image_join" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="150dp"
        android:layout_height="1dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/imageButton5"
        android:layout_toEndOf="@+id/image_join"
        app:srcCompat="@drawable/line1"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/image_join" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgbtn_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="OR"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/imgbtn_google"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="21dp"
        app:srcCompat="@drawable/google" />
</RelativeLayout>
