<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="codefactory.learfletproject.MainActivity">

    <ImageView
        android:id="@+id/image_join"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_below="@+id/image_line"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        app:srcCompat="@drawable/admin1" />

    <ImageView
        android:id="@+id/image_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtv_join"
        app:srcCompat="@drawable/line1"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/txtv_join"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="회원가입"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/imgbtn_back"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:layout_above="@+id/image_line"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/back"
        android:layout_alignParentLeft="true" />

    <ImageButton
        android:id="@+id/imgbtn_exit"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_above="@+id/image_line"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/exit"
        android:layout_alignParentRight="true" />

    <EditText
        android:id="@+id/edt_id"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/image_join"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="이메일 또는 아이디"
        android:inputType="textPersonName"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edt_pw"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/edt_id"
        android:layout_below="@+id/edt_id"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="비밀번호(4~8자리)"
        android:inputType="textPassword"
        android:textSize="16sp"
        android:layout_alignLeft="@+id/edt_id" />

    <EditText
        android:id="@+id/edt_age"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/edt_pw"
        android:layout_below="@+id/edt_pw"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:hint="나이(숫자만입력)"
        android:inputType="number"
        android:textSize="16sp"
        android:layout_alignLeft="@+id/edt_pw" />

    <Spinner
        android:id="@+id/spn_menu"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:layout_below="@+id/edt_age"
        android:layout_marginTop="19dp"
        android:textAlignment="center" />

    <Spinner
        android:id="@+id/spn_menu2"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/spn_menu"
        android:layout_alignStart="@+id/spn_menu"
        android:layout_below="@+id/spn_menu"
        android:layout_marginTop="12dp"
        android:textAlignment="center" />

    <Spinner
        android:id="@+id/spn_menu3"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/spn_menu2"
        android:layout_alignStart="@+id/spn_menu2"
        android:layout_below="@+id/spn_menu2"
        android:layout_marginTop="12dp"
        android:textAlignment="center" />

    <ImageButton
        android:id="@+id/imgbtn_joinbtn"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/edt_age"
        android:layout_marginBottom="20dp"
        app:srcCompat="@drawable/joinbutton1"
        android:layout_alignLeft="@+id/edt_age" />

    <RadioButton
        android:id="@+id/radbtn_man"
        android:layout_width="70dp"
        android:layout_height="23dp"
        android:layout_below="@+id/spn_menu"
        android:layout_toStartOf="@+id/radbtn_women"
        android:text="남자"
        android:textAlignment="textStart"
        android:textSize="14sp"
        android:layout_toLeftOf="@+id/radbtn_women"
        android:gravity="start" />

    <RadioButton
        android:id="@+id/radbtn_women"
        android:layout_width="70dp"
        android:layout_height="23dp"
        android:layout_alignTop="@+id/radbtn_man"
        android:layout_toStartOf="@+id/imgbtn_exit"
        android:text="여자"
        android:layout_toLeftOf="@+id/imgbtn_exit" />

</RelativeLayout>
